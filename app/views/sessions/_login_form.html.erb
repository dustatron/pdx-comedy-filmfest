
  <div class="col-md-12 col-md-offset-0 home--login-top">
    <spam class="home--login-top--label text-center"><i class="fas fa-user"></i> Login</spam>
  </div>
  <div class="col-md-12 col-md-offset-0 home--login">
    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= link_to "(forgot password)", new_password_reset_path %>
        <%= f.password_field :password, class: 'form-control' %>
        
        <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <spa class= "pad-left"> Remember me on this computer</span>
        <% end %>


        <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
    <% end %>

   <div class="text-center"> New user? <%= link_to "Sign up now!", signup_path %> </div>
  </div>
