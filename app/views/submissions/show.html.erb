<div class="well"> 
    <div class="row"> <!--TITLE START-->
      <div class="col-md-8 text-center">
          <h4><%= @submission.title %></h4> 
      </div>  
      <div class="col-md-4 text-center">
          <h4>Details</h4>
      </div>
    </div><!--TITLE END-->
    
    
    <div class="row"><!--CONTENT START -->
    
        <div class="col-md-8"><!-- Video Player Start-->
            <div class="flex-video widescreen"><%= get_video_iframe(@submission.link) %> </div>
        </div> <!-- Video Player End -->
        
        <div class="col-md-4"><!-- Video Details Start-->
            <!--USER NAME-->
            <div class="row">
                <div class="col-xs-4 text-right simple-label">
                    User :
                </div>
                 <div class="col-xs-8 text-left simple-label">
                     <%= link_to @user.name, @user %> 
                 </div> 
            </div>
            
            <!--EMAIL-->
            <div class="row">
                <div class="col-xs-4 text-right simple-label">
                    Email : 
                </div>
                <div class="col-xs-8 simple-label text-left">
                    <%= mail_to @user.email %>    
                </div>
            </div>
            
            <!--RUN TIME-->
            <div class="row">
                <div class="col-xs-4 text-right simple-label">
                    length : 
                </div>
                <div class="col-xs-8 text-left simple-label">
                    <%= @submission.length %> Minutes
                </div>
            </div>
            
            <!--LINK-->
            <div class="row">
                <div class="col-xs-4 text-right simple-label">
                    Link : 
                </div>
                <div class="col-xs-8 text-left simple-label">
                    <a href= "<%= @submission.link %>" target = "blank"><%= @submission.title %> </a>  
                </div>
            </div>
            
            
            <!--Re-Play True-->
            <div class="row">
                <div class="col-xs-4 text-right simple-label">
                    Re-Play :  
                </div>
                <div class="col-xs-8 text-left simple-label">
                    <%= @submission.reuse %>
                </div>
            </div>
            
            <!-- Has Rights -->
            <div class="row">
                <div class="col-xs-4 text-right simple-label">
                    Has Rights :  
                </div>
                <div class="col-xs-8 text-left simple-label">
                   Need to Add
                </div>
            </div>
            
            <!-- Status -->
        
            <div class="row">
                <div class="col-xs-4 text-right simple-label">
                    Status :  
                </div>
                <div class="col-xs-8 text-left simple-label">
                    <%= @submission.status %>
                </div>
            </div>
            
            <% if @submission.status == 'Rejected'%>
                <div class="row">
                    <div class="col-xs-4 text-right simple-label">
                        reason :  
                    </div>
                    <div class="col-xs-8 text-left simple-label">
                        <%= @submission.reason %>
                    </div>
                </div>
            <% end %>
            
            <!-- Status -->
        
            <div class="row">
                <div class="col-xs-4 text-right simple-label">
                    Status :  
                </div>
                <div class="col-xs-8 text-left simple-label">
                    <%= @submission.status %>
                </div>
            </div>
            <hr>
            <!--Description-->
            <div class="row">
                <div class="col-xs-4 text-right simple-label">
                    Detials : 
                </div>
                <div class="col-xs-8 text-left simple-label box">
                    <%= @submission.description %>
                </div>
            </div>
            <hr>

        </div><!-- Video Details End-->
        
    </div><!--CONTENT END-->
    
<% if current_user.admin? %>
    <div class="row"> <!-- BUTTONS START-->
        <div class="col-md-4 col-md-offset-2">
             <!-- Edit -->
                <div class="top-bump">
                    <%= link_to "EDIT", edit_submission_path, class: "btn btn-info btn-block" %>   
                </div>
        </div>
        
        <div class="col-md-4">
            <!-- Change Status -->
                <div class="top-bump">
                    <div class="dropdown">
                        <button class="btn btn-success btn-block dropdown-toggle" type="button" data-toggle="dropdown"><%= @submission.status %>
                          <span class="caret"></span></button>
                          <ul class="dropdown-menu">
                            <li><%= link_to "October", submission_path(:status => 'oct'), method: :status_change %></li>
                            <li><%= link_to "November", submission_path(:status => 'nov'), method: :status_change %></li>
                            <li><%= link_to "December", submission_path(:status => 'dec'), method: :status_change %></li>
                            <li><%= link_to "January", submission_path(:status => 'jan'), method: :status_change %></li>
                            <li><%= link_to "February", submission_path(:status => 'feb'), method: :status_change %></li>
                            <li><%= link_to "March", submission_path(:status => 'mar'), method: :status_change %></li>
                            <li><%= link_to "Reject", submission_path(:status => 'reject'), method: :status_change %></li>
                            <li><%= link_to "Archive", submission_path(:status => 'archive'), method: :status_change %></li>
                            <li><%= link_to "Being Reviewed", submission_path(:status => 'review'), method: :status_change %></li>
                          </ul>
                    </div> 
                </div>
        </div>
    </div>
    
</div>
 
<div class="well">
    <div class="row">

        <div class="col-md-4 col-md-offset-4">
            <%= link_to "Delete Submission", @submission, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-block top-bump' %>
        </div>
    </div>    
</div>
<%end%>
