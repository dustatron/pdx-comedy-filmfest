<div class="well <%= submission.approved ? 'approved' : 'submission' %>">
    <!--PLAYER-->
    <div class="row">
        <!--PLAYER-->
        <div class="col-md-8 text-left video_player">
            <div class="flex-video widescreen"><%= get_video_iframe(submission.link) %>  </div>
            
        </div>

        <div class="col-md-4 player-right">
            <div class="row">
                <%if current_user.admin %>
                    <%if submission.approved %>
                        <%= link_to "Unapprove", submission, method: :approved, class: 'btn btn-info btn-block' %>
                    <%else%>
                         <%= link_to "Approve", submission, method: :approved, class: 'btn btn-success btn-block' %>
                    <%end%>  
                <% end %>
                <%= link_to "Edit", submission, class: 'btn btn-warning btn-block' %>
                <%= link_to "delete", submission, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-block' %>
           </div>
           <div class="row sub-details">
               <div class="row ">
                   <div class="col-xs-6 text-right">
                       <strong>Title :</strong>  
                   </div>
                  <div class="col-xs-6 text-left">
                      <%= submission.title %>
                  </div>
               </div>
               <div class="row ">
                   <div class="col-xs-6 text-right">
                       <strong>Posted By :</strong>  
                   </div>
                   <div class="col-xs-6 text-left">
                       <%= submission.user.name %>
                   </div>
               </div>
               <div class="row">
                   <div class="col-xs-6 text-right">
                       <strong> Runtime :</strong> 
                   </div>
                   <div class="col-xs-6 text-left">
                       <%= submission.length %> Minutes
                   </div>
               </div>
               <div class="row">
                   <div class="col-xs-6 text-right">
                        <strong> Brief : </strong>   
                   </div>
                   <div class="col-xs-6 text-left">
                       <%= submission.description %>
                   </div>
               </div>
               <div class="row">
                   <div class="col-xs-6 text-right">
                        <strong> password : </strong> 
                   </div>
                   <div class="col-xs-6 text-left">
                       <%= submission.password %> 
                   </div>
               </div>
                <div class="row">
                   <div class="col-xs-6 text-right">
                       <strong> Replay :    </strong>
                   </div>
                   <div class="col-xs-6 text-left">
                       <%= submission.reuse ? 'Yes' : 'No' %>
                   </div>
                </div>
                <div class="row">
                   <div class="col-xs-6 text-right">
                       <strong>Status : </strong> 
                   </div>
                   <div class="col-xs-6 text-left">
                       <%= submission.approved ? 'Accepted' : 'Under Review' %>
                   </div>
                </div>
               </div>
           </div>
        </div>
</div>